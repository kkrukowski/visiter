  <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
  <script>
    document.querySelector(".chat__send--btn").addEventListener('click', () => {
      console.log("XD")
    })

    const username = "<%= name %>";
    const userDbId = "<%= userDbId %>";
    const receiverId = "<%= receiverId %>";

    var socket = io({ autoConnect: false });

    const sessionId = localStorage.getItem("sessionId");
    console.log("sessionId", sessionId);
    if (sessionId) {
      console.log("session exists");
      socket.auth = { sessionId, username, userDbId };
      socket.connect();
    } else {
      console.log("no sessionId");
      socket.auth = { username, userDbId };
      socket.connect();
    }

    socket.on("session", ({ userSessionId, userDbId, username }) => {
      socket.auth = { userSessionId, userDbId, username };
      console.log("create session ", socket.auth);
      localStorage.setItem("sessionId", userSessionId);
      console.log("added to storage ", localStorage.getItem("sessionId"));
    });

    // socket.onAny((event, ...args) => {
    //   console.log(event, args);
    // });

    socket.on("users", (users) => {
      console.log(users);
    });

    let messages = document.querySelector(".chat__messages--list")
    let messagesWrapper = document.querySelector('.chat__messages--wrapper')
    let form = document.querySelector(".chat__input--wrapper")
    let input = document.querySelector(".chat--input");

    form.addEventListener("submit", (e) => {
      e.preventDefault();
      let content = input.value;
      if (content) {
        socket.emit("private_message", {
          content: content,
          to: receiverId,
        });
        let item = document.createElement("li");
        let contentItem = document.createElement('p')
        contentItem.textContent = content;
        contentItem.classList.add("message--content")
        item.classList.add("message--item", "sended")
        item.appendChild(contentItem)
        messages.appendChild(item);
        messagesWrapper.scrollTop = messagesWrapper.scrollHeight
        input.value = "";
      }
    });

    socket.on("private_message", (msg) => {
      console.log("msg: ", msg);
      let item = document.createElement("li");
      let contentItem = document.createElement("p")
      console.log(msg.msgInfo.userInfo.userDbId, userDbId);
      if (msg.msgInfo.userInfo.userDbId !== userDbId) {
        contentItem.textContent = msg.msgInfo.content;
        contentItem.classList.add("message--content")
        item.classList.add("message--item")
        item.appendChild(contentItem)
        messages.appendChild(item);
        window.scrollTo(0, document.body.scrollHeight);
      }
    });
  </script>
