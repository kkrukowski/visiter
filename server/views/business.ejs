  </div>
  <% if(business.workers != null){ %>
    <div class="workers--wraper">
      <% business.workers.forEach(function(worker) { %>
      <div class="workers--item">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            class="avatar--img"
