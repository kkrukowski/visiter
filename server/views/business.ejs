<h1>TWOJA FIRMA</h1>


<h2>Twoi pracownicy:</h2>
<% if(business.workers != null){ %>
    <ul>
        <% workers.forEach(function(worker) { %>
            <li><a href="/<%= worker._id %>">
                    <%= worker.name %>
                        <%= worker.surname%>
                </a>
                <form action="/business/myBusiness/<%= business._id%>/<%= worker._id %>/removeWorker" method="POST">
                    <input type="submit" value="X">
                </form>
            </li>
            <% }); %>
    </ul>
    <% } %>
        <p>Dodaj uzytkownika</p>
        <form action="/business/myBusiness/<%=business._id%>/addWorker" method="POST">
            <label for="code"></label>
            <input type="text" name="code">
            <input id="submit" type="submit" value="Dodaj">
        </form>
        <h2>Twoje serwisy:</h2>
        <% if(business.services != null){ %>
            <ul>
                <% services.forEach(function(service) { %>
                    <li>
                            <%= service.name %>
                            <br>
                            <%= service.description %>
                            <br>
                            <%= service.price %>zł, <%= service.duration %>h
                        <form action="/business/myBusiness/<%= business._id%>/<%= service._id %>/removeService"
                            method="POST">
                            <input type="submit" value="X">
                        </form>
                    </li>
                    <% }); %>
            </ul>
            <% } %>
                <p>Dodaj serwis</p>
                <form action="/business/myBusiness/<%=business._id%>/addService" method="POST">
                    <label for="name">Nazwa</label>
                    <input type="text" name="name"><br>
                    <label for="description">Opis</label>
                    <input type="text" name="description"><br>
                    <label for="price">Cena</label>
                    <input type="number" step="0.01" name="price"><br>
                    <label for="duration">Czas</label>
                    <input type="number" step="0.01" name="duration"><br>
                    <input id="submit" type="submit" value="Dodaj">
                </form>


<br><br><br><br><br>
<h1> KALENDARZ </h1>

<div>
    <% months = ["Styczeń", "Luty", "Marzec", "Kwiecień", "Maj", "Czerwiec", "Lipiec", "Sierpień","Wrzesień", "Październik", "Listopad", "Grudzień"]%>
    <% days = ["Niedziela", "Poniedziałek", "Wtorek", "Środa", "Czwartek", "Piątek", "Sobota"] %>
    <% curr = new Date(); %>
    <% first = curr.getDate() - curr.getDay()+1; %>
    <% last = first + 6; %>

    <% firstday = new Date(curr.setDate(first)); %>
    <% lastday = new Date(curr.setDate(last)); %>
    <%= firstday.getDate() %> <%= days[firstday.getDay()] %> <%= months[firstday.getMonth()] %> <%= firstday.getFullYear() %> - <%= lastday.getDate() %> <%= days[lastday.getDay()] %> <%= months[lastday.getMonth()] %> <%= lastday.getFullYear() %>

    <% calendarDate = firstday %>
    <div id="calendar">
        <% for(i = 0; i < 7; i++){ %>
        <%  calendarDate = new Date(curr.setDate(first+i)) %>
        <%= days[calendarDate.getDay()]; %>,
        <%= months[calendarDate.getMonth()]; %>
        <%= calendarDate.getDate(); %>   
        <% } %>
    </div>
</div>

<% if(message!=""){ %>
    <p><%= message %></p>
<% } %>